<%- include('partials/header.ejs') %>


<body>
    <%- include('partials/navbar.ejs') %>


    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/responder" class="">

            <textarea name="corpo" class="form-control" placeholder="Responder"></textarea>
             <input  type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-success">Responder</button>
            <br>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{%>
            <div class="container mt-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %></p>
                    </div>
                </div>
            </div>
            
        <%});%>
        <hr>
    </div>
</body>

<%- include('partials/footer.ejs') %>